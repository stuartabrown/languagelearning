doctype html
html(lang="en")
  head
    meta(charset="UTF-8")
    meta(name="viewport", content="width=device-width, initial-scale=1.0")
    title= title
    link(rel='stylesheet', href='https://cdn.jsdelivr.net/npm/bootswatch@5.3.2/dist/quartz/bootstrap.min.css')
    link(rel="stylesheet", href="/stylesheets/style.css") 
  body
    .container
      header.p-3.text-white.text-center(role="banner")
        h1 My Language Learning App
        if user
          a.btn.btn-light(href=`/${user.username}/generate`) Generate Content
          a.btn.btn-light(href='/users/logout') Logout
        else
          a.btn.btn-light(href='/users/login') Login

      nav.navbar.navbar-expand-lg.navbar-dark(role="navigation")
        .container-fluid
          .navbar-brand
            a(href="/") Language Learning
          button.navbar-toggler(type="button", data-bs-toggle="collapse", data-bs-target="#navbarNav", aria-controls="navbarNav", aria-expanded="false", aria-label="Toggle navigation")
            span.navbar-toggler-icon
          #navbarNav.collapse.navbar-collapse
            ul.navbar-nav.ms-auto.d-flex.align-items-center
              li.nav-item
                a.btn.btn-light.me-2(href="/") Home
              if user
                li.nav-item
                  a.btn.btn-light.me-2(href=`/${user.username}`) My Content
                li.nav-item
                  a.btn.btn-light.me-2(href=`/${user.username}/generate`) Generate Content
              li.nav-item
                if user
                  a.btn.btn-light(href="/users/logout") Logout
                else
                  a.btn.btn-light(href="/users/login") Login

      main.p-3(role="main")
        block content

      footer.p-3.text-white.text-center(role="contentinfo")
        p &copy; #{new Date().getFullYear()} My App

    script(src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/js/bootstrap.bundle.min.js" integrity="sha384-C6RzsynM9kWDrMNeT87bh95OGNyZPhcTNXj1NW7RuBCsyN/o0jlpcV8Qyq46cDfL" crossorigin="anonymous")
