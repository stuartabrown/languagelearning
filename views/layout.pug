doctype html
html(lang="en")
  head
    meta(charset="UTF-8")
    meta(name="viewport", content="width=device-width, initial-scale=1.0")
    title= title
    //- link(rel="stylesheet", href="/stylesheets/style.css") //Your custom styles
    link(rel="stylesheet", href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/css/bootstrap.min.css" integrity="sha384-T3c6CoIi6uLrA9TneNEoa7RxnatzjcDSCmG1MXxSR1GAsXEV/Dwwykc2MPK8M2HN" crossorigin="anonymous")
  body
    .container
      header.p-3.bg-dark.text-white.text-center
        h1 My Language Learning App
        if user
          a.btn.btn-light(href=`/${user.username}/generate`) Generate Content
          a.btn.btn-light(href='/users/logout') Logout
        else
          a.btn.btn-light(href='/users/login') Login
      nav.navbar.navbar-expand-lg.navbar-dark.bg-dark
        .container-fluid
          .navbar-brand
            a(href="/") Language Learning
          button.navbar-toggler(type="button", data-bs-toggle="collapse", data-bs-target="#navbarNav", aria-controls="navbarNav", aria-expanded="false", aria-label="Toggle navigation")
            span.navbar-toggler-icon
          #navbarNav.collapse.navbar-collapse
            ul.navbar-nav.ms-auto
              li.nav-item
                a.nav-link(href="/") Home
              if user
                li.nav-item
                  a.nav-link(href=`/${user.username}/generate`) Generate Content
              li.nav-item
                a.nav-link(href="/history") History
      main.p-3
        block content
      footer.p-3.bg-dark.text-white.text-center
        p &copy; #{new Date().getFullYear()} My App

    script(src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/js/bootstrap.bundle.min.js" integrity="sha384-C6RzsynM9kWDrMNeT87bh95OGNyZPhcTNXj1NW7RuBCsyN/o0jlpcV8Qyq46cDfL" crossorigin="anonymous")
