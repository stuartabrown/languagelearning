tbody#contentTable
  each content in history
    tr
      td #{content.language} // Display the language
      td
        a(href=`/${content.user.username}/${content._id}`) #{content.prompt} // Link to content details
      td #{content.response} // Display the response
      td #{content.learning || 'N/A'} // Display the learning attribute or 'N/A' if null
      td #{new Date(content.timestamp).toLocaleDateString('en-GB')} // Format the date
      td
        if content.audioExists
          audio(controls)
            source(src=`/audio/${content._id}.mp3` type="audio/mpeg")
            p Your browser does not support the audio element.
        else
          button.btn.btn-secondary(type="button", onclick=`downloadAudio(${JSON.stringify(content.response)}, '${content._id}')`) Download Audio